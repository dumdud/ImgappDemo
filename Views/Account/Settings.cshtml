@model ImgappDemo.Models.User;

<div class="container-fluid my-5 py-5">
    <div class="row">
        <div class="col-sm-12 col-lg-10 col-xl-12">
            <form action="" method="POST">
                <h2>Account</h2>

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" value="@Model.Name">
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" value="@Model.Email">
                    <p>Email will not be displayed publicly</p>
                </div>

                <div class="mb-3">
                    <label class="form-label">Avatar</label>
                    <div class="form-control">

                        <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(Model.Avatar)" />
                        <br>
                        <input type="file" class="form-control" name="avatar" accept=".jpg, .gif, .png">
                        <p class="tips">JPG, GIF or PNG, Max size: 10MB</p>

                        <a href="javascript: void(0);">Random</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" value="Save Changes">Save</button>
            </form>
        </div>
    </div>
</div>