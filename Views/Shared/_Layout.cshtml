<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ImgappDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ImgappDemo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        @* class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3
            sticky-top" *@
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark ">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="/" asp-action="Index">ImgappDemo</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarTogglerDemo01">
                    <ul class="navbar-nav flex-sm-row">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="/" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>

                <div class="d-sm-inline-flex justify-content-between text-center">
                    <ul class="navbar-nav flex-sm-row">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <div class="dropdown nav-link">
                                    <img class="rounded-circle img-fluid dropdown-toggle"
                                    src="data:image;base64,@User.FindFirst("Avatar")?.Value" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false" width="40" />
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Account"
                                            asp-action="Profile">Profile</a></li>
                                        <li><a class="dropdown-item" asp-controller="Account"
                                            asp-action="Settings">Settings</a></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-primary btn-sm" id="New">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Posts"
                                    asp-action="Create">New
                                        Post</a>
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <div class="btn-group" role="group" aria-label="Login">
                                    <button type="button" class="btn btn-primary ">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Account"
                                        asp-action="Login">Login</a>
                                    </button>
                                    <button type="button" class="btn btn-primary ">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Account"
                                        asp-action="Register">Register</a>
                                    </button>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ImgappDemo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
